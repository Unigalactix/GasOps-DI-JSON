# AZURE_OPENAI_DEPLOYMENT = "your_deployment_name"
# AZURE_OPENAI_API_VERSION = "2023-10-01"

# Optional: OpenAI for AI analysis
# OPENAI_API_KEY = "your_openai_api_key_here"
